<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dogs.ui.dogs.DogsListActivity">

    <include
        android:id="@+id/toolbar_dogs_app"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/owner_name_textview"
        style="@style/TextViewTitleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_dogs_app"/>


    <ScrollView
        android:id="@+id/dogs_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_name_textview">

        <LinearLayout
            android:id="@+id/dogs_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>


</android.support.constraint.ConstraintLayout>