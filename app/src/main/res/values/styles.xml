<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item> -->
    </style>

    <style name="MainDogApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorCustomLightDark</item>
        <item name="android:colorBackground">@color/colorCustomLightDark</item>
    </style>

    <style name = "NoActionBar" parent="MainDogApp">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="TextViewTitleItem" parent="MainDogApp">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_view_colors</item>
    </style>

    <style name="BoldRobotoThin15sp" parent="MainDogApp">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDirty</item>
    </style>

    <style name="BoldRobotoThin35sp" parent="MainDogApp">
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDirty</item>
    </style>

    <style name="BoldRobotoThin13sp" parent="MainDogApp">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDirty</item>
    </style>


    <style name="TextStyleItalicBold" parent="MainDogApp">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightPrimaryDark</item>
    </style>

    <style name="TextViewSubTitle" parent="MainDogApp">
        <item name="android:textColor">@color/colorCustomDark</item>
    </style>

    <style name="Toolbar" parent="MainDogApp">
        <item name="android:textColor">@color/colorCustomLightDark</item>
    </style>

</resources>
