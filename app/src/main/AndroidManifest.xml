<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.andersen.dogsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".dogs.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".dogs.activity.DogOwnersListActivity"
            android:theme="@style/MainDogApp"/>
        <activity
            android:name=".dogs.activity.OwnerDogsActivity"
            android:theme="@style/MainDogApp"/>
        <activity
            android:name=".dogs.activity.DogsInfoActivity"
            android:theme="@style/MainDogApp"/>
        <activity
            android:name=".dogs.activity.MainAppDescriptionActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".dogs.activity.RecyclerViewTestActivity">
        </activity>
    </application>

</manifest>